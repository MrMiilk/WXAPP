<import src="../../compoments/tBar/tBar.wxml"/>
<import src="../../compoments/recommend/recommend.wxml"/>
<view class='container'>
  <view class='title1'><text>产品超市</text></view>
  <view class="tab" style="flex-direction:row;">
        <view id='0' class="{{(content == '0'||content == 0) ? 'tab_now' : 'tab_'}}" bindtap="tabChart"><text>{{cate_name0}}</text></view>
        <view id='1' class="{{(content == '1'||content == 1) ? 'tab_now' : 'tab_'}}" bindtap="tabChart"><text>{{cate_name1}}</text></view>
        <view id='2' class="{{(content == '2'|| content == 2) ? 'tab_now' : 'tab_'}}" bindtap="tabChart"><text>{{cate_name2}}</text></view>
  </view>
  <view class='wrap' style='padding-top: 15rpx;'>
        <view wx:for='{{storelist}}' wx:for-item='store' wx:key='*this' catchtap='apply_now' id='{{store.name}}'>
          <!-- <view bindtap='apply_'> -->
            <template is="store" data="{{store}}"/>
          <!-- </view> -->
        </view>
      <view style="height:50px"></view>
  </view>
  <template is="tabBar" data="{{tabBar:bindData.tabBar}}"/>
</view>