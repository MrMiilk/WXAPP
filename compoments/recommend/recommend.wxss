page{
    background-color: #f0f0f0;
}

.store{
padding: 15rpx;
display: flex;
flex-wrap: nowrap;
align-items: flex-start;
flex-direction: row;
margin-left: 10rpx;
}

.store image{
    width: 200rpx;
    height: 200rpx;
    flex-shrink: 0;
}
.store .info{
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 10rpx;
}

.store .info .title{
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
}

.store .info .title .name{
    color: #111111;
    font-size: 40rpx;
    white-space: nowrap;
}

.store .info .title .apply{
    width: 350rpx;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-end;
    align-content: center;
}

.store .info .title .apply .applycounts{
    color: #aa1a1a;
    font-size: 28rpx;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-end;
    align-content: flex-end;
}

.store .info .details{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.store .info .details .item .item_name{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    color: #1111116b;
    font-size: 30rpx;
}

.store .info .details .item .item_value{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    color: #111111;
    font-size: 28rpx;
}

.store .info .bottom{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}


.store .info .bottom .type{
    padding: 10rpx;
    width: 200rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    font-size: 23rpx;
    flex-wrap: nowrap;
}

.store .info .bottom .type ._type{
    background: #7777771c;
    color: rgba(238, 75, 75, 0.575);
}

.store .info .bottom .applynow .apply_button{
    margin-left:50rpx;
    width: 210rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    color: #505050;
    font-size: 30rpx;
    flex-wrap: nowrap;
}